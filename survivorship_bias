    <script>
        let currentStep = 1;

        function nextStep() {
            if (currentStep === 1) {
                // Move to Step 2
                activateStep(2);
                document.getElementById('status-text').innerText = "Step 2 of 3: The Abraham Wald Insight";
            } else if (currentStep === 2) {
                // Move to Step 3
                activateStep(3);
                document.getElementById('status-text').innerText = "Step 3 of 3: Entrepreneurship Bias";
            } else if (currentStep === 3) {
                // Reveal Graveyard in Step 3
                const grave = document.getElementById('graveyard-card');
                
                if (grave.classList.contains('revealed')) {
                    // Reset
                    location.reload();
                } else {
                    grave.classList.add('revealed');
                    document.getElementById('final-lesson').style.opacity = 1;
                    document.getElementById('actionBtn').innerHTML = "Restart <span>&#8635;</span>";
                    document.getElementById('status-text').innerText = "Simulation Complete";
                }
            }
        }

        function activateStep(stepNum) {
            // Hide all
            document.querySelectorAll('.step-view').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.dot').forEach(el => el.classList.remove('active'));
            
            // Show current
            document.getElementById('step' + stepNum).classList.add('active');
            document.getElementById('dot' + stepNum).classList.add('active');
            currentStep = stepNum;
        }
    </script>

